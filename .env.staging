# Staging Environment Configuration
NEXT_PUBLIC_ENV=staging

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=${AWS_COGNITO_USER_POOL_ID}
AWS_COGNITO_USER_POOL_CLIENT_ID=${AWS_COGNITO_USER_POOL_CLIENT_ID}
AWS_COGNITO_IDENTITY_POOL_ID=${AWS_COGNITO_IDENTITY_POOL_ID}

# S3 Configuration
AWS_S3_BUCKET_NAME=abditrade-staging-cache
AWS_S3_REGION=us-east-1

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=${OPENSEARCH_ENDPOINT}
OPENSEARCH_INDEX=cards-staging

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=abditrade-staging-

# Backend API Configuration
NEXT_PUBLIC_BACKEND_API_URL=https://staging-api.abditrade.com
BACKEND_API_KEY=${BACKEND_API_KEY}

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_TEST}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_TEST}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_TEST}

# NextAuth Configuration
NEXTAUTH_URL=https://staging.abditrade.com
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}

# Database Configuration (if needed)
DATABASE_URL=${DATABASE_URL_STAGING}

# External API Configuration
YUGIOH_API_URL=https://db.ygoprodeck.com/api/v7/cardinfo.php
POKEMON_API_URL=https://api.pokemontcg.io/v2/cards
MAGIC_API_URL=https://api.scryfall.com/cards/search

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Cache Configuration
CACHE_TTL_HOURS=12
ENABLE_S3_CACHE=true

# Feature Flags
ENABLE_OPENSEARCH=true
ENABLE_BACKEND_API=true
ENABLE_REAL_PAYMENTS=false