# Production Environment Configuration for Abditrade
# Copy this file to .env.local and fill in the actual values

# Application
NEXT_PUBLIC_APP_URL=https://abditrade.com
NEXT_PUBLIC_API_URL=https://api.abditrade.com

# AWS Cognito Configuration
NEXT_PUBLIC_AWS_REGION=us-east-2
NEXT_PUBLIC_COGNITO_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_COGNITO_USER_POOL_CLIENT_ID=your-client-id
COGNITO_USER_POOL_DOMAIN=abditrade-auth
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Card Data APIs
YGO_PRO_API_URL=https://db.ygoprodeck.com/api/v7
POKEMON_TCG_API_URL=https://api.pokemontcg.io/v2
POKEMON_TCG_API_KEY=your-pokemon-api-key

# Database - AWS RDS PostgreSQL
DATABASE_HOST=your-db-endpoint
DATABASE_PORT=5432
DATABASE_NAME=abditrade_prod
DATABASE_USER=abditrade_user
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=true
DATABASE_URL=postgresql://abditrade_user:your-password@your-endpoint:5432/abditrade_prod?sslmode=require

# Cache - AWS ElastiCache Redis
REDIS_ENDPOINT=your-redis-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=rediss://your-redis-endpoint:6379

# AWS Services
AWS_S3_BUCKET=abditrade-assets
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@abditrade.com

# Security
JWT_SECRET=your-jwt-secret
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://abditrade.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Email Service (AWS SES)
SES_ACCESS_KEY_ID=your-ses-access-key
SES_SECRET_ACCESS_KEY=your-ses-secret-key
SES_REGION=us-east-1

# Storage
CLOUDINARY_CLOUD_NAME=abditrade
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Rate Limiting & Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://abditrade.com

# Feature Flags
ENABLE_CARD_DATA_APIS=true
ENABLE_REAL_AUTHENTICATION=true
ENABLE_AWS_SES=true
ENABLE_EMPLOYEE_INVITATION=true